<button
  aria-disabled={{if @isDisabled "true"}}
  class={{this.styles}}
  type="button"
  {{on "click" this.onClick}}
  ...attributes
>
  {{#if @isLoading}}
    {{yield to="loading"}}
    <span class="sr-only" data-loading>{{yield}}</span>
  {{else if @isDisabled}}
    <span class="flex flex-grow items-center justify-center gap-x-2">
      {{yield}}
      {{yield to="disabled"}}
    </span>
  {{else}}
    {{yield}}
  {{/if}}
</button>