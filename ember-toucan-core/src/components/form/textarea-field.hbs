<div class="flex flex-col">
  <Form::Field as |field|>
    <field.Label for={{field.id}} data-textarea-label>{{@label}}</field.Label>

    {{#if @hint}}
      <field.Hint id={{field.hintId}} data-textarea-hint>{{@hint}}</field.Hint>
    {{/if}}

    <field.Control>
      <textarea
        aria-invalid={{if @error "true"}}
        aria-describedby="{{if @error field.errorId}} {{if @hint field.hintId}}"
        class="block h-20 min-h-6 p-1 bg-overlay-1 focus:outline-none rounded-sm shadow-focusable-outline focus:shadow-focus-outline
          {{if @isDisabled 'text-disabled' 'text-titles-and-attributes'}}"
        disabled={{@isDisabled}}
        id={{field.id}}
        ...attributes
      />
    </field.Control>

    {{#if @error}}
      <field.Error
        id={{field.errorId}}
        data-textarea-error
      >{{@error}}</field.Error>
    {{/if}}
  </Form::Field>
</div>