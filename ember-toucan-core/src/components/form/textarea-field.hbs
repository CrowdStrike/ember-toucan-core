<div class="flex flex-col">
  <Form::Field as |field|>
    <field.Label for={{field.id}} data-textarea-label>{{@label}}</field.Label>

    {{#if @hint}}
      <field.Hint id={{field.hintId}} data-textarea-hint>{{@hint}}</field.Hint>
    {{/if}}

    <field.Control>
      <Form::Controls::Textarea
        aria-invalid={{if @error "true"}}
        aria-describedby="{{if @error field.errorId}} {{if @hint field.hintId}}"
        id={{field.id}}
        @isDisabled={{@isDisabled}}
        ...attributes
      />
    </field.Control>

    {{#if @error}}
      <field.Error
        id={{field.errorId}}
        data-textarea-error
      >{{@error}}</field.Error>
    {{/if}}
  </Form::Field>
</div>