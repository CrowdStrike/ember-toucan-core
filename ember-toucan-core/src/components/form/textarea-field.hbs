<div class="flex flex-col">
  <Form::Field as |field|>
    <field.Label for={{field.id}}>{{@label}}</field.Label>

    {{#if @hint}}
      <field.Hint id={{field.hintId}}>{{@hint}}</field.Hint>
    {{/if}}

    <field.Control>
      <textarea
        aria-invalid={{if @error "true"}}
        aria-describedby="{{if @error field.errorId}} {{if @hint field.hintId}}"
        class="block h-20 p-1
          {{if @isDisabled 'text-disabled' 'text-titles-and-attributes'}}"
        disabled={{@isDisabled}}
        id={{field.id}}
        ...attributes
      />
    </field.Control>

    {{#if @error}}
      <field.Error id={{field.errorId}}>{{@error}}</field.Error>
    {{/if}}
  </Form::Field>
</div>