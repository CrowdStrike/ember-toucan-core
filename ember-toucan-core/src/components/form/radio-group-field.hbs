<Form::Fieldset
  @label={{@label}}
  @hint={{@hint}}
  @error={{@error}}
  @isDisabled={{@isDisabled}}
  aria-invalid={{if @error "true"}}
  role="radiogroup"
  ...attributes
>
  {{yield
    (hash
      RadioField=(component
        (ensure-safe-component this.RadioFieldComponent)
        name=@name
        onChange=this.handleInput
        selectedValue=@value
        isDisabled=@isDisabled
      )
    )
  }}
</Form::Fieldset>